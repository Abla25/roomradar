{
  "name": "roomradar",
  "version": "2.0.0",
  "type": "module",
  "description": "AI-powered student room finder with Firebase authentication",
  "main": "index-new.html",
  "scripts": {
    "dev": "python -m http.server 8000",
    "build": "echo 'No build step required for static site'",
    "deploy": "vercel --prod",
    "fetch": "node scripts/fetch_notion.js",
    "fetch:barcelona": "CITY=barcelona node scripts/fetch_notion.js",
    "fetch:roma": "CITY=roma node scripts/fetch_notion.js",
    "process:all": "python process_cities.py",
    "process:barcelona": "CITY=barcelona python main.py",
    "process:roma": "CITY=roma python main.py"
  },
  "dependencies": {},
  "devDependencies": {
    "vercel": "^32.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
